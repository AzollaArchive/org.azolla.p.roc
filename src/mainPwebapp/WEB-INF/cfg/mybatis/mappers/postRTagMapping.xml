<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.postRTag">

    <resultMap id="postRTag" type="PostRTagVo">
        <id property="id" column="id" />
        <result property="postId" column="postId" />
        <result property="tagId" column="tagId" />
        <result property="addDate" javaType="java.util.Date" column="addDate" jdbcType="DATE" />
        <result property="modDate" javaType="java.util.Date" column="modDate" jdbcType="DATE" />
        <result property="rmvDate" javaType="java.util.Date" column="rmvDate" jdbcType="DATE" />
        <result property="visible" column="visible" />
        <result property="operable" column="operable" />
        <result property="deleted" column="deleted" />
    </resultMap>

    <insert id="add" parameterType="org.azolla.p.roc.vo.PostRTagVo">
        insert into roc_t_post_r_tag(postUrlTitle,tagUrlName,addDate) values(#{postUrlTitle},#{tagUrlName},now())
    </insert>

    <insert id="rmv" parameterType="org.azolla.p.roc.vo.PostRTagVo">
        delete roc_t_post_r_tag where postUrlTitle=#{postUrlTitle},tagUrlName=#{tagUrlName}
    </insert>

</mapper>